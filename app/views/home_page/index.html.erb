<!-- contact section starts  -->

<section class="contact" id="contact">
  <h1 class="heading"> <span><%= t(".contact") %></span> <%= t(".us") %> </h1>
  <form action="#">
    <div class="inputBox">
      <input type="text" placeholder="<%= t(".name") %>">
      <input type="email" placeholder="<%= t(".email") %>">
    </div>
    <div class="inputBox">
      <input type="number" placeholder="<%= t(".number") %>">
      <input type="text" placeholder="<%= t(".subject") %>">
    </div>
    <textarea placeholder="<%= t(".message") %>" name="" id="" cols="30" rows="10"></textarea>
    <input type="submit" value="<%= t(".send_message") %>" class="btn">
  </form>
</section>
