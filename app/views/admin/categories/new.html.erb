<% provide :title, t(".title") %>
<div class="admin_manage_index">
  <div class="row">
    <div class="col-md-12 heading">
      <h3><%= t ".heading" %></h3>
    </div>
  </div>
  <div class="row justify-content-center add_category">
    <div class="col-6" >
      <%= form_for(@category, url:  admin_categories_path) do |f| %>
        <%= render "/shared/error_messages_cat" %>
        <%= f.label :name, t(".name"), class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :parent_id, t(".parent"), class: "form-label" %>
        <%= f.select :parent_id, root_categories, include_blank: t(".choose"), class: "form-control" %>
        <%= f.submit t(".add"), class: "btn btn-success btn_add_cat" %>  
      <% end %>
    </div>
  </div>
</div>
