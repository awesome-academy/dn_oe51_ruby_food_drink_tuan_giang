<% provide :title, t("signup.title") %>
<div class="container">
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">						
          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1">
              <% if check_image_tag @product %>
                <%= image_tag @product.image  %>
              <% else %>
                <img src="/assets/product_default" alt="Product image">
              <% end %>
            </div>
          </div>						
        </div>
        <div class="details col-md-6">
          <h1 class="product-title">
            <%= @product.name %>
          </h1>
          <div class="rating">
            <div class="stars">
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            </div>
          </div>
          <p class="product-description">
            <%= @product.detail %>
          </p>
          <h4 class="price">
            <%= t ".price" %>
            <span>
              <%= number_to_currency(@product.price) %>
            </span>
          </h4>
          <div class="action">
            <%= link_to t(".add_to_cart"), add_item_to_carts_path(@product, quantity: 1), class: "add-to-cart btn btn-default", method: :post %>
            <a href="#" class="btn btn-default">
              <%= t ".buy_now" %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
