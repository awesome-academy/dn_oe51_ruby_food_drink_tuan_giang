<% provide :title, t(".title") %>

<!-- home section starts  -->

<section class="home" id="home">
  <div class="image">
      <img src="assets/home-img.png" alt="">
  </div>

  <div class="content">
      <span><%= t(".span") %></span>
      <h3><%= t(".content") %></h3>
      <a href="#" class="btn"><%= t(".started") %></a>
  </div>
</section>

<!-- banner section starts  -->

<section class="banner-container">
  <div class="banner">
      <img src="assets/banner-1.jpg" alt="">
      <div class="content">
        <h3><%= t(".offer") %></h3>
        <p><%= t(".upto45") %></p>
        <a href="#" class="btn"><%= t(".check_out") %></a>
      </div>
  </div>

  <div class="banner">
      <img src="assets/banner-2.jpg" alt="">
      <div class="content">
        <h3><%= t(".limited") %></h3>
        <p><%= t(".upto50") %></p>
        <a href="#" class="btn"><%= t(".check_out") %></a>
      </div>
  </div>
</section>

