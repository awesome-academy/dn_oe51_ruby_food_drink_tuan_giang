<% provide :title, t("app.views.home.title") %>

<!-- home section starts  -->

<section class="home" id="home">
  <div class="image">
      <img src="assets/home-img.png" alt="">
  </div>

  <div class="content">
      <span><%= t("app.views.home.span") %></span>
      <h3><%= t("app.views.home.content") %></h3>
      <a href="#" class="btn"><%= t("app.views.home.started") %></a>
  </div>
</section>

<!-- banner section starts  -->

<section class="banner-container">
  <div class="banner">
      <img src="assets/banner-1.jpg" alt="">
      <div class="content">
        <h3><%= t("app.views.home.offer") %></h3>
        <p><%= t("app.views.home.upto45") %></p>
        <a href="#" class="btn"><%= t("app.views.home.check_out") %></a>
      </div>
  </div>

  <div class="banner">
      <img src="assets/banner-2.jpg" alt="">
      <div class="content">
        <h3><%= t("app.views.home.limited") %></h3>
        <p><%= t("app.views.home.upto50") %></p>
        <a href="#" class="btn"><%= t("app.views.home.check_out") %></a>
      </div>
  </div>
</section>

<!-- category section starts  -->

<section class="category" id="category">
  <h1 class="heading"><%= t("app.views.home.shop") %> <span><%= t("app.views.home.categories") %></span></h1>
  <div class="box-container">
    <div class="box">
      <h3><%= t("app.views.home.vegitables") %></h3>
      <img src="assets/category-1.png" alt="">
      <a href="#" class="btn"><%= t("app.views.home.shop_now") %></a>
    </div>
    <div class="box">
      <h3><%= t("app.views.home.juice") %></h3>
      <img src="assets/category-2.png" alt="">
      <a href="#" class="btn"><%= t("app.views.home.shop_now") %></a>
    </div>
    <div class="box">
      <h3><%= t("app.views.home.meat") %></h3>
      <img src="assets/category-3.png" alt="">
      <a href="#" class="btn"><%= t("app.views.home.shop_now") %></a>
    </div>
    <div class="box">
      <h3><%= t("app.views.home.fruite") %></h3>
      <img src="assets/category-4.png" alt="">
      <a href="#" class="btn"><%= t("app.views.home.shop_now") %></a>
    </div>
  </div>
</section>

