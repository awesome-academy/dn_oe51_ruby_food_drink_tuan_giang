      <a href="#" class="btn"><%= t(".shop_now") %></a>
    </div>
    <div class="box">
      <h3><%= t(".fruite") %></h3>
      <img src="assets/category-4.png" alt="">
      <a href="#" class="btn"><%= t(".shop_now") %></a>
    </div>
  </div>
</section>

