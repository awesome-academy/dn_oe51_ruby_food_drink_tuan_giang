<% provide :title, t(".title") %>
<div class="container ">
  <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 toppad " > 
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t ".title" %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12 col-lg-12 " align="center">
            <div class=" col-md-3 col-lg-3 ">
              <img class="img-md rounded-circle" src="/assets/admin/face2.jpg" alt="Profile image">
            </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><%= t ".username" %></td>
                    <td><%= @user.user_name %></td>
                  </tr>
                  <tr>
                    <td><%= t ".fullname" %></td>
                    <td><%= @user.full_name %></td>
                  </tr>
                  <tr>
                    <td><%= t ".email" %></td>
                    <td><%= @user.email %></td>
                  </tr>
                  <% @address.each do |item| %>
                    <tr>
                      <td><%= t ".address_phone" %></td>
                      <td>
                        <%= item.address %> - <%= item.phone %> 
                        <%= t ".default" if item.is_default.present? %>
                        <%= link_to t(".edit"), edit_address_path(id: item.id) %>
                        <%= link_to t(".delete"), address_path(id: item.id), method: :delete, data: {confirm: t(".confirm")} %>
                      </td>
                    </tr>
                  <% end %>                    
                </tbody>
              </table>
              <%= link_to t(".order"), order_path(@user), class: "btn btn-primary" %>
              <%= link_to t(".add_address"), new_address_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
