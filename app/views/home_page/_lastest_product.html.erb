<section class="product" id="product">
  <h1 class="heading"><%= t(".latest") %> <span><%= t(".product") %></span></h1>
  <ul class="box-container">
    <% @products.each do |product| %>
      <li class="box">
          <% if check_image_tag product %>
            <td ><%= image_tag product.image  %></td>
          <% else %>
            <td ><img src="/assets/product_default" alt="Product image"></td>
          <% end %>
          <h3><%= product.name %></h3>
          <div class="stars">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
          </div>
          <div class="price"> <%= number_to_currency(product.price) %></div>
          <div class="quantity">
            <span><%= t(".quantity") %> </span>
            <input type="number" min="1" max="1000" value="1">
            <a href="#" class="fas fa-shopping-cart icon_cart"></a>          
          </div>
          <%= link_to t(".see_details"), product_path(id: product.id), class: "btn" %>
      </li>
    <% end %>
  </ul>
</section>
