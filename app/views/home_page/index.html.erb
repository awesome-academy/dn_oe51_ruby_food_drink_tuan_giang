<!-- contact section starts  -->

<section class="contact" id="contact">
  <h1 class="heading"> <span><%= t("app.views.home.contact") %></span> <%= t("app.views.home.us") %> </h1>
  <form action="#">
    <div class="inputBox">
      <input type="text" placeholder="<%= t("app.views.home.name") %>">
