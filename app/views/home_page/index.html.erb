<% provide :title, t(".title") %>

<!-- home section starts  -->

<section class="home" id="home">
  <div class="image">
      <img src="assets/home-img.png" alt="">
  </div>

  <div class="content">
      <span><%= t(".span") %></span>
      <h3><%= t(".content") %></h3>
      <a href="#" class="btn"><%= t(".started") %></a>
  </div>
</section>

<!-- banner section starts  -->

<section class="banner-container">
  <div class="banner">
      <img src="assets/banner-1.jpg" alt="">
      <div class="content">
        <h3><%= t(".offer") %></h3>
        <p><%= t(".upto45") %></p>
        <a href="#" class="btn"><%= t(".check_out") %></a>
      </div>
  </div>

  <div class="banner">
      <img src="assets/banner-2.jpg" alt="">
      <div class="content">
        <h3><%= t(".limited") %></h3>
        <p><%= t(".upto50") %></p>
        <a href="#" class="btn"><%= t(".check_out") %></a>
      </div>
  </div>
</section>

<!-- category section starts  -->

<section class="category" id="category">
  <h1 class="heading"><%= t(".shop") %> <span><%= t(".categories") %></span></h1>
  <div class="box-container">
    <% @category.each do |cate| %>
      <% if cate.parent_id.nil? %>
        <div class="box">
          <h3><%= cate.name %></h3>
          <img src="assets/category-1.png" alt="">
          <%= link_to t(".shop_now"), categories_path(parent_id: cate.id), class: "btn" %>
        </div>
      <% end %> 
    <% end %>
  </div>
</section>

<!-- product section starts  -->

<section class="product" id="product">
  <h1 class="heading"><%= t(".latest") %> <span><%= t(".product") %></span></h1>
  <ul class="box-container">
    <% @products.each do |product| %>
      <li class="box">
          <%= image_tag(product.image) %>
          <h3><%= product.name %></h3>
          <div class="stars">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
          </div>
          <div class="price"> <%= product.price %></div>
          <div class="quantity">
            <span><%= t(".quantity") %> </span>
            <input type="number" min="1" max="1000" value="1">
            <a href="#" class="fas fa-shopping-cart icon_cart"></a>
          </div>
          <%= link_to t(".see_details"), product_path(id: product.id), class: "btn" %>
      </li>
    <% end %>
  </ul>
  <div class="paginate">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</section>

<!-- contact section starts  -->

<section class="contact" id="contact">
  <h1 class="heading"> <span><%= t(".contact") %></span> <%= t(".us") %> </h1>
  <form action="#">
    <div class="inputBox">
      <input type="text" placeholder="<%= t(".name") %>">
      <input type="email" placeholder="<%= t(".email") %>">
    </div>
    <div class="inputBox">
      <input type="number" placeholder="<%= t(".number") %>">
      <input type="text" placeholder="<%= t(".subject") %>">
    </div>
    <textarea placeholder="<%= t(".message") %>" name="" id="" cols="30" rows="10"></textarea>
    <input type="submit" value="<%= t(".send_message") %>" class="btn">
  </form>
</section>
