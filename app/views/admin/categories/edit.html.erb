<% provide :title, t(".title") %>
<div class="admin_manage_index">
  <div class="row">
    <div class="col-md-12 heading">
      <h3><%= t ".heading" %></h3>
    </div>
  </div>
  <div class="row justify-content-center add_category">
    <div class="col-6" >
      <%= form_for(@category, url:  admin_category_path) do |f| %>
        <%= render "/shared/error_messages_cat" %>
        <%= f.label :name, t(".name"), class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :parent_id, t(".parent"), class: "form-label" %>
        <%= f.select :parent_id, root_categories, class: "form-control", include_blank: t(".choose") %>
        <%= f.submit t(".submit"), class: "btn btn-primary btn_add_cat" %>  
      <% end %>
    </div>
  </div>
</div>
