<% provide :title, t(".title") %>
<div class="container admin_manage_index">
  <div class="row">
    <div class="col-md-12 heading">
      <h3><%= t ".heading" %></h3>
    </div>
  </div>
  <div class="row justify-content-center add_product">
    <div class="col-10 mt-5" >
      <%= form_for(@product, url:  admin_products_path) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :category_id, t(".category"), class: "form-label" %>
          <%= f.select :category_id, children_categories, include_blank: t(".choose"), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :name, t(".name"), class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :detail, t(".detail"), class: "form-label" %>
          <%= f.text_area :detail, class: "form-control", size: "70x6" %>
        </div>
        <div class="form-group">
          <%= f.label :image, t(".image"), class: "form-label" %>
          <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
        </div>
        <div class="form-group">
          <%= f.label :price, t(".price"), class: "form-label" %>
          <%= f.number_field :price, min: 0, step: 500, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :rating, t(".rating"), class: "form-label" %>
          <%= f.range_field :rating, class: "form-control", in: 1.0..5.0, step: 0.5 %>
        </div>
        <div class="form-group">
          <%= f.submit t(".submit"), class: "btn btn-success btn_add" %>  
        </div>
      <% end %>
    </div>
  </div>
</div>
